@{
    ViewData["Title"] = "Home Page";
}

<head>
 
</head>



<body>
    <form method="post">
        <div id="Buscador">
            <input type="text" name="autor" placeholder="Autor" value="@ViewBag.autor">
            <br />
            <input type="text" name="titulo" placeholder="Título" value="@ViewBag.Titulo">
            <br />
            <input type="text" name="descripcion" placeholder="Descripción" value="@ViewBag.Desc">
            <br />
        </div>
       <br />

       <div id="botonesPag">        
            <input  type="submit" name="pagina" value="0" >
            <input type="submit" name="pagina" value="1">
            <input type="submit" name="pagina" value="2">
            <input type="submit" name="pagina" value="3">
            
       </div>

        <div>
            <button id="submit" type="submit" name="pagina" value="0">Buscar</button>
        </div>
    </form>
    <br />

    @try
    {
         <div class="container" style="margin-top: 10px;padding: 5px">
        <table id="tablax" class="table table-striped table-bordered" style="width:100%">
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Descripcion</th>         
        </tr>

      
         @foreach (var libro in ViewBag.Libros)
        {
            <tr>
                <td>@libro.VolumeInfo.Title</td>

                @foreach (var autor in libro.VolumeInfo.Authors)
                {
                    <td>@autor</td>
                    break;
                }

                <td>@libro.VolumeInfo.Description</td>
            </tr>
        }
       
       

    </table>
    </div>


        }
        catch (NullReferenceException)
        {

        }


</body>



